<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/Division"
            android:hint="본부"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/OfficeName"
            android:hint="시설명"
            android:layout_marginLeft="30dp"/>/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <android.widget.Button
            android:id="@+id/SaveSpaceButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:background="#A7A4A4"
            android:textSize="20sp"
            android:text="저장" />

        <android.widget.Button
            android:id="@+id/addSpaceButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:background="#329028"
            android:layout_marginLeft="30dp"
            android:textSize="35sp"
            android:text="+" />
        <android.widget.Button
            android:id="@+id/delSpaceButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:background="#D4071F"
            android:textSize="35sp"
            android:text="-" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 파일 경로: 없음" />


        <Button
            android:id="@+id/btnSaveXLSXdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="데이터 저장"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
